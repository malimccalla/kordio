{
  "name": "@kordio/api",
  "version": "0.0.1",
  "type": "commonjs",
  "private": true,
  "license": "UNLICENSED",
  "description": "Kordio API",
  "main": "src/index.ts",
  "scripts": {
    "start": "node src/index.js",
    "migrate:start:prod": "yarn run prisma:generate && yarn run migrate:prod && yarn run seed && yarn run start",
    "prisma:generate": "npx prisma generate",
    "seed": "npx prisma db seed",
    "migrate:prod": "npx prisma migrate deploy",
    "dev": "nodemon src/index.ts",
    "gen:types": "graphql-codegen",
    "studio": "npx prisma studio",
    "build": "rimraf dist && tsc && copyfiles -u 1 src/**/*.graphql dist && copyfiles -u 1 src/prisma/migrations/**/** dist && copyfiles -u 1 src/prisma/schema.prisma dist"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} src/prisma/seeds/index.ts",
    "schema": "src/prisma/schema.prisma"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.3",
    "@graphql-tools/schema": "^9.0.1",
    "@prisma/client": "^4.2.1",
    "algoliasearch": "^4.14.2",
    "apollo-server": "^3.10.1",
    "apollo-server-express": "^3.10.1",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "glob": "^8.0.3",
    "googleapis": "^107.0.0",
    "graphql": "^16.6.0",
    "helmet": "^6.0.0",
    "ioredis": "^5.2.3",
    "morgan": "^1.10.0",
    "nanoid": "3.3.4",
    "next-cookie": "^2.8.0",
    "pg": "^8.7.3",
    "slugify": "^1.6.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.11.6",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@types/algoliasearch": "^4.0.0",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.6",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.19",
    "prisma": "^4.2.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  }
}
